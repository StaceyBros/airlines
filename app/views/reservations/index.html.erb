<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Flight</th>
      <th>date</th>
      <th>Origin</th>
      <th>destination</th>
      <th>Seat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= User.find(reservation.user_id).name %></td>
        <td><%= Flight.find(reservation.flight_id).number %></td>
        <td><%= Flight.find(reservation.flight_id).date %></td>
        <td><%= Flight.find(reservation.flight_id).origin %></td>
        <td><%= Flight.find(reservation.flight_id).destination %></td>

        <td><%= reservation.seat %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_reservation_path %>
