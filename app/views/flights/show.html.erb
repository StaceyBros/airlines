<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @flight.number %>
</p>

<p>
  <strong>Origin:</strong>
  <%= @flight.origin %>
</p>

<p>
  <strong>Destination:</strong>
  <%= @flight.destination %>
</p>

<p>
  <strong>Date:</strong>
  <%= @flight.date %>
</p>

<p>
  <strong>Plane:</strong>
  <%= @flight.plane.split(',') %>
</p>

<p>
  <strong>Airplane:</strong>
  <%= Airplane.find(@flight.airplane_id).name %>
</p>

<p>
  <strong>Users:</strong>
  <% @flight.users.uniq.each do |user| %>
    <%=user.name%>
  <% end %>
</p>

<%= link_to 'Edit', edit_flight_path(@flight) %> |
<%= link_to 'Back', flights_path %>
